<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoEcommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoEcommerce.styles.css" asp-append-version="true" />
</head>

<body>
    
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom" id="navSuperior">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Privacy">ProjetoEcommerce</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ContaAdmin">Conta</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Varejo/Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div id="containerFlexAdmin">

        <nav id="MenuLateral">
            <ul id="itensMenuLateral">
                <li>
                    <button class="itensPaiMenuLateral" onclick="esconderflexInnerListProdutos()" id="botaoPaiProdutos">Produtos ᐁ</button>
                    <ul class="flexInnerList" id="flexInnerListProdutos">
                        <li><a class="botaoFilhoMenuAdmin" asp-area="" asp-controller="Home" asp-action="ProdutosConsultar">Consultar</a></li>
                        <li><a class="botaoFilhoMenuAdmin" asp-area="" asp-controller="Home" asp-action="ProdutosCadastrar">Cadastrar</a></li>
                    </ul>
                </li>
                <li>
                    <button class="itensPaiMenuLateral"><a class="textoItensPaiMenuAdmin" asp-area="" asp-controller="Home" asp-action="Pedidos">Pedidos</a></button>
                </li>
                <li>
                    <button class="itensPaiMenuLateral" onclick="esconderflexInnerListUsuarios()" id="botaoPaiUsuarios">Usuários ᐁ</button>
                    <ul class="flexInnerList" id="flexInnerListUsuarios">
                        <li><a class="botaoFilhoMenuAdmin" asp-area="" asp-controller="Home" asp-action="AdministradoresConsultar">Administradores</a></li>
                        <li><a class="botaoFilhoMenuAdmin" asp-area="" asp-controller="Home" asp-action="ClientesConsultar">Clientes</a></li>
                    </ul>
                </li>
                <li>
                    <button class="itensPaiMenuLateral" onclick="esconderflexInnerListRelatorios()" id="botaoPaiRelatorios">Relatórios ᐁ</button>
                    <ul class="flexInnerList" id="flexInnerListRelatorios">
                        <li><a class="botaoFilhoMenuAdmin" asp-area="" asp-controller="Home" asp-action="RelatorioDiario">Diário</a></li>
                        <li><a class="botaoFilhoMenuAdmin" asp-area="" asp-controller="Home" asp-action="RelatorioMensal">Mensal</a></li>
                        <li><a class="botaoFilhoMenuAdmin" asp-area="" asp-controller="Home" asp-action="RelatorioAnual">Anual</a></li>
                        <li><a class="botaoFilhoMenuAdmin" asp-area="" asp-controller="Home" asp-action="RelatorioGlobal">Global</a></li>
                    </ul>
                </li>
                <li><button class="itensPaiMenuLateral"><a class="textoItensPaiMenuAdmin" asp-area="" asp-controller="Home" asp-action="Configuracoes">Configurações</a></button></li>
            </ul>
        </nav>

        <main role="main">
            @RenderBody()
        </main>

    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>

</html>